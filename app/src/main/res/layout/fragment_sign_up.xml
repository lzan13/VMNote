<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    android:padding="@dimen/vm_padding_large"
    tools:context=".ui.sign.SignUpFragment">

    <TextView
        android:id="@+id/sign_welcome_title"
        style="@style/VMText.Headline"
        android:layout_marginStart="@dimen/vm_margin_large"
        android:layout_marginTop="@dimen/vm_dimen_56"
        android:text="@string/sign_up"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.vmloft.develop.library.tools.widget.VMEditView
        android:id="@+id/sign_account_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vm_margin_large"
        android:layout_marginTop="@dimen/vm_dimen_56"
        android:layout_marginEnd="@dimen/vm_margin_large"
        android:background="@drawable/input_fillet_shape"
        android:elevation="@dimen/vm_elevation_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_welcome_title"
        app:vm_edit_hint="@string/account_name"
        app:vm_edit_mode="account" />

    <com.vmloft.develop.library.tools.widget.VMEditView
        android:id="@+id/sign_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vm_margin_large"
        android:layout_marginTop="@dimen/vm_margin_large"
        android:layout_marginEnd="@dimen/vm_margin_large"
        android:background="@drawable/input_fillet_shape"
        android:elevation="@dimen/vm_elevation_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_account_et"
        app:vm_edit_hint="@string/account_password"
        app:vm_edit_mode="password" />

    <Button
        android:id="@+id/sign_up_btn"
        style="@style/VMBtn.Fillet.Green"
        android:layout_marginStart="@dimen/vm_margin_large"
        android:layout_marginTop="@dimen/vm_margin_large"
        android:enabled="false"
        android:text="@string/sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_password_et" />

    <TextView
        android:id="@+id/sign_in_go_hint"
        style="@style/VMText.Caption"
        android:layout_marginStart="@dimen/vm_margin_large"
        android:layout_marginTop="@dimen/vm_dimen_24"
        android:text="@string/already_have_an_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_btn" />

    <Button
        android:id="@+id/sign_in_go_btn"
        style="@style/VMBtn.Flat"
        android:text="@string/sign_in_go"
        android:textStyle="normal"
        android:textColor="@color/vm_blue_87"
        app:layout_constraintBottom_toBottomOf="@+id/sign_in_go_hint"
        app:layout_constraintStart_toEndOf="@+id/sign_in_go_hint"
        app:layout_constraintTop_toTopOf="@+id/sign_in_go_hint" />

    <TextView
        style="@style/VMText.Caption"
        android:text="@string/copyright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>