<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/VMBtn.Flat.Full"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="@dimen/vm_padding_large">

        <TextView
            android:id="@+id/text_title"
            style="@style/VMText.Subhead"
            android:ellipsize="end"
            android:lines="1" />

        <TextView
            android:id="@+id/text_content"
            style="@style/VMText.Caption"
            android:ellipsize="end"
            android:maxLines="3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_sync_icon"
        android:layout_width="@dimen/vm_dimen_16"
        android:layout_height="@dimen/vm_dimen_16"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/vm_margin_small"
        android:src="@drawable/ic_cloud_sync"
        android:tint="@color/app_accent"
        android:visibility="gone" />
</RelativeLayout>