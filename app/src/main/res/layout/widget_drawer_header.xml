<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer_header_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height">

    <ImageView
        android:id="@+id/main_drawer_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_background"
        android:tint="@color/vm_black_38" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/vm_dimen_16">

        <ImageView
            android:id="@+id/main_drawer_avatar_iv"
            android:layout_width="@dimen/vm_avatar_normal"
            android:layout_height="@dimen/vm_avatar_normal"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/main_drawer_nickname_tv"
            style="@style/VMText.Subhead"
            android:paddingTop="@dimen/vm_dimen_8"
            android:text="@string/app_name"
            android:textColor="@color/vm_white_87" />
    </LinearLayout>
</RelativeLayout>
