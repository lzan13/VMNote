<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vm_theme_background_light"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".sign.SignInActivity">

    <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/widget_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vm_dimen_56"
        android:background="@color/vm_transparent"
        app:elevation="@dimen/vm_dimen_0">

        <android.support.v7.widget.Toolbar
            android:id="@+id/widget_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/vm_transparent"
            android:minHeight="?attr/actionBarSize"
            app:elevation="@dimen/vm_dimen_0">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/layout_sign_in_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vm_dimen_32">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/vm_dimen_32"
                    android:text="@string/sign_in"
                    android:textColor="@color/vm_black_87"
                    android:textSize="@dimen/vm_dimen_24" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vm_black_87"
                        android:textColorHint="@color/vm_black_38">

                        <EditText
                            android:id="@+id/edit_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/account"
                            android:inputType="textImeMultiLine"
                            android:textColor="@color/vm_black_87"
                            android:textColorHint="@color/vm_black_38"
                            android:textSize="@dimen/vm_size_16" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/btn_clear_account"
                        android:layout_width="@dimen/vm_dimen_36"
                        android:layout_height="@dimen/vm_dimen_36"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/vm_dimen_8"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close_black_24dp"
                        android:tint="@color/vm_white_38"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vm_black_87"
                        android:textColorHint="@color/vm_black_38">

                        <EditText
                            android:id="@+id/edit_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:inputType="textPassword|textImeMultiLine"
                            android:textColor="@color/vm_black_87"
                            android:textColorHint="@color/vm_black_38"
                            android:textSize="@dimen/vm_size_16" />
                    </android.support.design.widget.TextInputLayout>


                    <ImageButton
                        android:id="@+id/btn_show_password"
                        android:layout_width="@dimen/vm_dimen_36"
                        android:layout_height="@dimen/vm_dimen_36"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/vm_dimen_8"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_visibility_black_24dp"
                        android:tint="@color/vm_white_38"
                        android:visibility="visible" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/vm_dimen_48"
                    android:layout_margin="@dimen/vm_margin_normal"
                    android:alpha="0.5"
                    android:enabled="false"
                    android:text="@string/sign_in"
                    android:theme="@style/VMBtn.Red" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/vm_black_54"
                        android:textSize="@dimen/vm_size_14" />

                    <Button
                        android:id="@+id/btn_sign_up"
                        style="@style/VMBtn.Transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/vm_btn_height_normal"
                        android:layout_margin="@dimen/vm_dimen_0"
                        android:padding="@dimen/vm_dimen_0"
                        android:text="@string/sign_up"
                        android:textColor="@color/vm_blue_87"
                        android:theme="@style/VMBtn.Transparent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/vm_black_54"
                        android:textSize="@dimen/vm_size_14"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_forget_password"
                        style="@style/VMBtn.Transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/vm_btn_height_normal"
                        android:text="@string/app_name"
                        android:textColor="@color/vm_blue_87"
                        android:theme="@style/VMBtn.Transparent" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_sign_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vm_white_87"
        android:gravity="center"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="@dimen/vm_dimen_96"
            android:layout_height="@dimen/vm_dimen_96" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>