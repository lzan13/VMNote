<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".ui.home.MainActivity"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/widget_common_top_bar" />

        <RelativeLayout
            android:id="@+id/main_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/common_top_bar_rl" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/vm_margin_large"
            android:src="@drawable/ic_add"
            app:fabSize="normal"
            app:layout_behavior="com.vmloft.develop.app.vmnote.common.FABScrollBehavior" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/app_bg"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--头部信息-->
            <include layout="@layout/widget_drawer_header" />

            <!--底部设置等-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/main_drawer_footer_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vm_dimen_48"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vm_dimen_0_5"
                    android:background="@color/vm_decoration_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--设置-->
                <LinearLayout
                    android:id="@+id/main_drawer_settings_ll"
                    style="@style/VMBtn.Flat.Full"
                    android:layout_width="@dimen/vm_dimen_0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/main_drawer_theme_ll"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/vm_margin_large"
                        android:layout_marginEnd="@dimen/vm_margin_large"
                        android:src="@drawable/ic_settings"
                        android:tint="@color/menu_icon_selector" />

                    <TextView
                        style="@style/VMText.Menu"
                        android:text="@string/settings"
                        android:textColor="@color/menu_text_selector" />
                </LinearLayout>
                <!--切换主题-->
                <LinearLayout
                    android:id="@+id/main_drawer_theme_ll"
                    style="@style/VMBtn.Flat.Full"
                    android:layout_width="@dimen/vm_dimen_0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/main_drawer_settings_ll"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/main_drawer_theme_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/vm_margin_large"
                        android:layout_marginEnd="@dimen/vm_margin_large"
                        android:src="@drawable/ic_theme_night"
                        android:tint="@color/menu_icon_selector" />

                    <TextView
                        android:id="@+id/main_drawer_theme_name_tv"
                        style="@style/VMText.Menu"
                        android:text="@string/theme_night"
                        android:textColor="@color/menu_text_selector" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <!--菜单项-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/main_drawer_footer_ll"
                android:layout_below="@id/main_drawer_header_rl"
                android:orientation="vertical"
                android:paddingTop="@dimen/vm_dimen_8">

                <!--所有笔记-->
                <LinearLayout
                    android:id="@+id/main_drawer_all_ll"
                    style="@style/VMBtn.Flat.Full"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/vm_dimen_16"
                        android:layout_marginRight="@dimen/vm_dimen_16"
                        android:src="@drawable/ic_file"
                        android:tint="@color/menu_icon_selector" />

                    <TextView
                        style="@style/VMText.Menu"
                        android:text="@string/note_all"
                        android:textColor="@color/menu_text_selector" />
                </LinearLayout>

                <!--标签-->
                <LinearLayout
                    android:id="@+id/main_drawer_category_ll"
                    style="@style/VMBtn.Flat.Full"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/vm_dimen_16"
                        android:layout_marginRight="@dimen/vm_dimen_16"
                        android:src="@drawable/ic_book"
                        android:tint="@color/menu_icon_selector" />

                    <TextView
                        style="@style/VMText.Menu"
                        android:text="@string/note_category"
                        android:textColor="@color/menu_text_selector" />
                </LinearLayout>

                <!--回收站-->
                <LinearLayout
                    android:id="@+id/main_drawer_trash_ll"
                    style="@style/VMBtn.Flat.Full"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/vm_dimen_16"
                        android:layout_marginRight="@dimen/vm_dimen_16"
                        android:src="@drawable/ic_delete"
                        android:tint="@color/menu_icon_selector" />

                    <TextView
                        style="@style/VMText.Menu"
                        android:text="@string/note_trash"
                        android:textColor="@color/menu_text_selector" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
